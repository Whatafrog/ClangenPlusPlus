{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "E:/syst/msys2/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always", "-g", "${workspaceFolder}/main.cpp", 
                "-lmingw32", "-lSDL2main", "-lSDL2", "-lSDL2_image",
                "-o", "${workspaceFolder}/main.exe", "${workspaceFolder}/main.res",
            ],
            "stopAtEntry": false,
            "cwd": "E:/syst/msys2/mingw64",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "E:/syst/msys2/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}