{
    "version": "2.0.0",
    "command": "bash",
    "type": "shell",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: Apply .ico to .exe",
            "command": "windres",
            "args": [
                "program.rc", "-O", "coff", "-o", "main.res"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "E:/syst/msys2/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always", "-g", "${workspaceFolder}/main.cpp", 
                "-lmingw32", "-lSDL2main", "-lSDL2", "-lSDL2_image",
                "-o", "${workspaceFolder}/main.exe", "main.res"
            ],
            "options": {
                "cwd": "E:/syst/msys2/mingw64"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
}